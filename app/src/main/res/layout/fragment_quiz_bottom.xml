<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.QuizBottomFragment" >

    <TextView
            android:id="@+id/textView_quiz_rateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate card"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:id="@+id/button_quiz_0"
            android:text="0"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_quiz_rateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_quiz_1"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/button_quiz_1"
            android:text="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/button_quiz_0"
            app:layout_constraintStart_toEndOf="@id/button_quiz_0"
            app:layout_constraintEnd_toStartOf="@id/button_quiz_2"
            app:layout_constraintBottom_toBottomOf="@id/button_quiz_0"/>

    <Button
            android:id="@+id/button_quiz_2"
            android:text="2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/button_quiz_1"
            app:layout_constraintStart_toEndOf="@id/button_quiz_1"
            app:layout_constraintEnd_toStartOf="@id/button_quiz_3"
            app:layout_constraintBottom_toBottomOf="@id/button_quiz_1"/>

    <Button
            android:id="@+id/button_quiz_3"
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/button_quiz_2"
            app:layout_constraintStart_toEndOf="@id/button_quiz_2"
            app:layout_constraintEnd_toStartOf="@id/button_quiz_4"
            app:layout_constraintBottom_toBottomOf="@id/button_quiz_2"/>

    <Button
            android:id="@+id/button_quiz_4"
            android:text="4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/button_quiz_3"
            app:layout_constraintStart_toEndOf="@id/button_quiz_3"
            app:layout_constraintEnd_toStartOf="@id/button_quiz_5"
            app:layout_constraintBottom_toBottomOf="@id/button_quiz_3"/>

    <Button
            android:id="@+id/button_quiz_5"
            android:text="5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/button_quiz_4"
            app:layout_constraintStart_toEndOf="@id/button_quiz_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/button_quiz_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>